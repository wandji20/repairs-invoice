<div class="card m-1">
  <div class="card-body p-1">
    <h5 class="card-title"><%= invoice.name || 'N/A' %></h5>
    <h6 class="card-subtitle mb-2 "><%= invoice.email %></h6>
    <h5 class="text-center">Parts</h5>
    <div class="container p-0">
      <h6 class="d-flex justify-content-between col-12 p-0">
        <span class="col-4 p-0 text-center">Name</span>
        <span class="col-3 p-0 text-center">Price</span>
        <span class="col-2 p-0 text-center">Qty</span>
        <span class="col-3 p-0 text-center">Subtotal</span>
      </h6>
      <%= render invoice.invoice_items %>
    </div>
    <div class="d-flex justify-content-end pe-3 mt-2">
      <span class="me-2">Total</span>
      <span><%= invoice.invoice_items.sum(:subtotal) %></span>
    </div>
  </div>
</div>
