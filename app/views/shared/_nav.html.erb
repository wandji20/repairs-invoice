<nav class="container-fluid px-1 py-2 d-flex justify-content-between align-items-center h5 text-primary">
  <div class="col-4 d-flex justify-content-start align-items-center">
    <%= link_to root_path, class: 'text-decoration-none' do %>
      <span>Home</span>
    <% end %>
  </div>
  

  <div class="col-4 d-flex justify-content-end align-items-center">
    <ul class="list-unstyled m-0 d-flex justify-content-between">
      <% if user_signed_in? %>
        <li class="text-dark">
          <%= truncate(current_user.username, length: 7) %>
        </li>
        <li>
          <%= link_to 'logout', logout_path, class: "text-decoration-none ms-2" %>
        </li>
      <% else %>
        <li>
          <%= link_to 'login', new_session_path, class: "text-decoration-none "  %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>